<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.abdelmun3m.prototype">
    <!-- force include firebase Ui library instate of the minsdk required in it(17) and the minSDK in project(15) -->
    <uses-sdk tools:overrideLibrary="com.firebase.ui.auth" />
    <application
        android:allowBackup="true"

        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LvqXml"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".signUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".distance_popup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".alarm_popup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".notification_popup"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>