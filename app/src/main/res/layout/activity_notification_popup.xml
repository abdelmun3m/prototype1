<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/popup_style"
    tools:context="com.abdelmun3m.prototype.notification_popup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/notify"
             android:textSize="20sp"
             android:textColor="@color/accent"
             android:text="Determine best way of notifications before obstacles"/>
        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:background="@color/accent"
            android:layout_marginTop="70dp" />

        <CheckBox
            android:text="Voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SplitLine_hor1"
            android:id="@+id/voiceChk"
            android:layout_marginTop="20dp" />

        <CheckBox
            android:text="Gui with flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/voiceChk"
            android:id="@+id/GuifflashChk"
            android:layout_marginTop="20dp" />

        <CheckBox
            android:text="Gui without flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/GuifflashChk"
            android:id="@+id/GuiChk"
            android:layout_marginTop="20dp" />
        <View
            android:id="@+id/SplitLine_hor2"
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:background="#f5f5f5"
            android:layout_below="@id/GuiChk"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notifyOk"
            android:textSize="22sp"
            android:textColor="@color/primary_text"
            android:text="Ok"
            android:layout_below="@id/SplitLine_hor2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"/>

        <View
            android:background="#f5f5f5"
            android:id="@+id/hor3"
            android:rotation="90"
            android:layout_below="@id/SplitLine_hor2"
            android:layout_height="2dp"
            android:layout_marginLeft="110dp"
            android:layout_width="50dp"
            android:layout_marginTop="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notifyCancel"
            android:textSize="22sp"
            android:textColor="@color/primary_text"
            android:text="Cancel"
            android:layout_below="@id/SplitLine_hor2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="180dp"/>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
