<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">
    <ScrollView
        android:id="@+id/S"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_input_add"
                android:id="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:id="@+id/distance"
                android:text="Obstacle distance "
                android:textColor="@color/primary_text"
                android:textSize="22sp"
                android:layout_above="@+id/info1"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info1"
                android:text="Determine distance N to notify before obstacles "
                android:textColor="@color/secondary_text"
                android:textSize="16sp"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp" />

            <View
                android:id="@+id/SplitLine_hor1"
                android:layout_width="match_parent"
                android:layout_height= "2dp"
                android:background="#f5f5f5"
                android:layout_marginTop="75dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_notifications_black_24dp"
                android:layout_below="@+id/SplitLine_hor1"
                android:layout_toLeftOf="@+id/distance"
                android:layout_toStartOf="@+id/distance"
                android:id="@+id/imageView3"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView3"
                android:layout_alignLeft="@+id/distance"
                android:layout_alignStart="@+id/distance"
                android:id="@+id/alarm"
                android:text="Time for alarm "
                android:textColor="@color/primary_text"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:id="@+id/info2"
                android:text="Determine time to be alert when sleeping "
                android:textColor="@color/secondary_text"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />
            <View
                android:id="@+id/SplitLine_hor2"
                android:layout_width="match_parent"
                android:layout_height= "2dp"
                android:background="#f5f5f5"
                android:layout_marginTop="160dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_menu_GUI"
                android:layout_below="@+id/SplitLine_hor2"
                android:layout_toLeftOf="@+id/distance"
                android:layout_toStartOf="@+id/distance"
                android:id="@+id/imageView4"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SplitLine_hor2"
                android:layout_alignLeft="@+id/alarm"
                android:layout_alignStart="@+id/alarm"
                android:id="@+id/notification"
                android:text="Notification "
                android:textColor="@color/primary_text"
                android:textSize="22sp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView4"
                android:id="@+id/info3"
                android:text="select best way to be notified before obtacles "
                android:textColor="@color/secondary_text"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />

        </RelativeLayout>
