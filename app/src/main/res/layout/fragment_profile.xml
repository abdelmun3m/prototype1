<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/S"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@drawable/road">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:id="@+id/imageview_profile"
                android:layout_marginTop="53dp"
                android:src="@drawable/profile"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview_profile"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="70dp"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/firest_name"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:text="User Name"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    android:background="@color/Pfbc"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emaill_name"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:text="Email"
                    android:textSize="24sp"
                    android:background="@color/Pfbc"
                    android:textStyle="italic"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/firest_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"

                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile_num"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:text="Country"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    android:background="@color/Pfbc"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/emaill_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"

                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_num"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:text="City"
                    android:textSize="24sp"
                    android:background="@color/Pfbc"
                    android:textStyle="italic"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/mobile_num"
                    />


            </RelativeLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:id="@+id/edit"
                android:layout_marginTop="74dp"
                android:src="@drawable/edit"
                android:onClick="onClick"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_alignTop="@+id/imageview_profile"
                android:layout_toRightOf="@+id/imageview_profile"
                android:layout_toEndOf="@+id/imageview_profile" />
        </RelativeLayout>
        </ScrollView>

</FrameLayout>
