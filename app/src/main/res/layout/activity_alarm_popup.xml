<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarm_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/popup_style"
    tools:context="com.abdelmun3m.prototype.alarm_popup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alarm"
            android:text="Determine Time to be alert when sleeping"
            android:textSize="18sp"
            android:textColor="@color/accent"/>
        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="wrap_content"
            android:layout_height= "2dp"
            android:background="@color/accent"
            android:layout_marginTop="15dp" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/seekbar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/time"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:text="30 minutes "
                android:layout_marginTop="30dp"
                android:layout_marginLeft="100dp" />

            <View
                android:id="@+id/SplitLine_hor2"
                android:layout_width="wrap_content"
                android:layout_height= "2dp"
                android:background="#f5f5f5"
                android:layout_marginTop="20dp" />

           >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/alarmOk"
                  android:textSize="20sp"
                  android:textColor="@color/primary_text"
                  android:text="Ok"
                  android:layout_marginLeft="40dp"
                  android:layout_marginTop="20dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textColor="@color/primary_text"
                  android:id="@+id/alarmCancel"
                  android:text="Cancel"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="180dp" />

              <View
                  android:id="@+id/SplitLine_hor3"
                  android:layout_width="match_parent"
                  android:layout_height= "2dp"
                  android:background="#f5f5f5"
                  android:rotation="90"
                  android:layout_marginTop="40dp" />

          </RelativeLayout>

        </LinearLayout>
        </ScrollView>
</RelativeLayout>
